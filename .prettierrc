{
	"semi": false,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "none",
	"printWidth": 100,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"vueIndentScriptAndStyle": true,
	"overrides": [
		{
			"files": "*.vue",
			"options": {
				"parser": "vue"
			}
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
